<% include ../partials/header %>

<div class="container">
    <div class="row">
        <h1 style="text-align: center;">post a new comment to <%= campground.name %></h1>
        <div style="width: 30%; margin: 0 auto; margin-top: 25px">
            <form action="/campgrounds/<%= campground._id %>/comments" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="comment[text]" placeholder="text">
                </div>
                <div class="form-group">
                    <button class="btn btn-primary btn-lg btn-default btn-block">submit</button>
                </div>
            </form>
            <a href="/campgrounds">go back to campgrounds</a>
        </div>
    </div>
</div>

<% include ../partials/footer %>